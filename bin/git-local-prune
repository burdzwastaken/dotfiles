#!/bin/bash

#------------------------------------------------------------------------------
# File:   /usr/local/bin/git-local-prune
# Author: Matt Burdan <burdz@burdz.net>
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# prune local branches that HAVE been merged
#------------------------------------------------------------------------------

git fetch -p && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D
