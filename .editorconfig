#------------------------------------------------------------------------------
# editorconfig.org
#------------------------------------------------------------------------------

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,sh}]
indent_style = space
indent_size = 4

[*.{json,js,yml,yaml,less,ps1}]
indent_style = space
indent_size = 2

[*.{md,diff}]
trim_trailing_whitespace = false
